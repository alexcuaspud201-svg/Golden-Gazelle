rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función auxiliar para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Función auxiliar para verificar si el usuario es dueño del documento (coincide con el UID)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- COLECIONES ---

    // 1. Usuarios: Solo el dueño puede leer/escribir su propio perfil
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // 2. Historial de Chat: Solo el dueño puede acceder a su historial
    // El wildcard {document=**} cubre subcolecciones como 'messages'
    match /chat_history/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // 3. Ratings: Solo el dueño puede ver/modificar su calificación
    match /ratings/{userId} {
      allow read, write: if isOwner(userId);
    }

    // 4. Feedback: Cualquier usuario autenticado puede crear.
    // Lectura restringida (solo admin o mismo usuario si guardamos userId).
    match /feedback/{feedbackId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Generalmente no se borra feedback
    }

    // 5. Configuración Global (Map Lock): Todos los autenticados pueden leer. Solo admin escribe (por consola).
    match /enable_map/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Regla por defecto: Denegar todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
